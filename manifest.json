{
	"manifest_version" : 2,
	"name": "CSP for Me",
	"version": "0.3.8",
	"author": "yobukodori",
	"description": "Adds/Removes directive or directive-value to the existing CSP(content-security-policy) header in HTTP response.",

	"icons": {
		"48": "icons/icon-48.png"
	},

	"permissions" : [
		"webRequest",
		"webRequestBlocking",
		"storage",
		"<all_urls>"
	],

	"background" : {
		"scripts" : ["util.js", "background.js"]
	},

	"browser_action" : {
		"default_title" : "CSP for Me",
		"default_popup": "popup.html",
		"default_icon"  : {
			"48" : "icons/button-48-off.png"
		}
	},

	"options_ui" : {
		"page": "options.html",
		"browser_style": true,
		"open_in_tab":true
	},
	
	"browser_specific_settings": {
		"gecko": {
			"id": "csp-for-me@yobukodori"
		}
	}
}
